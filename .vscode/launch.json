  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "nx test",
      // npx nx test testing-todos-list
      "runtimeExecutable": "npx",
      "program": "nx",
      "args": ["test", "testing-todos-list"],
      "console": "integratedTerminal",
      "sourceMaps": false
    },
    {
      "type": "node",
      "request": "launch",
      "name": "nx generate",
      // npx nx generate @angular-challenges/custom-plugin:custom-library
      "runtimeExecutable": "npx",
      "program": "nx",
      "args": [
        "generate",
        "@angular-challenges/custom-plugin:custom-library",
        "--name=test"
      ]
    }
  ]
}
